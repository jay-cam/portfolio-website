---
const { index, slug, data, twoColumns } = Astro.props;
const { title, description, image, color, category } = data;
---

<div
  data-aos
  class="rounded-lg overflow-hidden relative group sm:h-full max-sm:!bg-black"
>
  <span
    class="absolute h-full group-[.aos-animate]:h-0 w-full z-30 duration-700 left-0 bottom-0"
    style={`background-color: ${color}; transition-delay: ${Number.isFinite(index) ? index * 100 : 0}ms;`}
  ></span>

  <img
    src={`${import.meta.env.BASE_URL}${image}`}
    alt={title}
    width={twoColumns ? 620 : 520}
    height={twoColumns ? 420 : 550}
    class={`scale-150 group-[.aos-animate]:scale-100 duration-700 sm:group-hover:!scale-125 object-cover w-full max-sm:!h-auto sm:h-full bg-light/20 ${twoColumns ? "has-twoColumns" : ""}`}
    style={twoColumns ? "height: 376px;" : ""}
    loading="lazy"
  />

  <div
    class="sm:absolute inset-0 z-20 flex justify-center flex-col px-6 sm:px-8 py-8"
  >
    <span
      class="absolute h-full w-full duration-300 left-0 bottom-0 sm:opacity-0 bg-overlay group-hover:opacity-100 -z-10 pointer-events-none"
    ></span>

    <div
      class="flex items-center justify-between sm:opacity-0 sm:-mt-1 group-hover:opacity-100 group-hover:mt-0 duration-300 sm:group-hover:delay-300"
    >
      <span
        class="uppercase text-white bg-white/10 text-sm font-light tracking-wider px-3 py-1 rounded-full backdrop-blur"
      >
        {category}
      </span>
      <a
        href={`${import.meta.env.BASE_URL}project/${slug}/`}
        class="stretched-link"
      >
        <img
          class="inline-block rotate-[135deg]"
          src={`${import.meta.env.BASE_URL}images/arrow-right.svg`}
          alt="arrow"
          height="22"
          width="25"
        />
      </a>
    </div>

    <div class="sm:text-center mt-6 sm:mt-auto">
      <h2
        class="text-4xl font-secondary font-semibold text-white mb-2 relative overflow-hidden"
      >
        <span
          class="block sm:translate-y-full group-hover:translate-y-0 duration-300"
        >
          {title}
        </span>
      </h2>
      <p class="text-white font-light relative overflow-hidden">
        <span
          class="block sm:translate-y-full group-hover:translate-y-0 duration-300 group-hover:delay-150"
        >
          {description}
        </span>
      </p>
    </div>
  </div>
</div>
