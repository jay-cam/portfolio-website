    <!-- End Matomo Code -->

    <!-- Log Rocket tag -->
    <script
      src="https://cdn.logr-in.com/LogRocket.min.js"
      crossorigin="anonymous"></script>
    <script>
      window.LogRocket && window.LogRocket.init("xwmmrk/jaycampbelldev");
    </script>
    <!-- End Log Rocket Code -->
  </head>

  <body
    class="font-primary bg-dark relative z-10 pt--[92px] lg:pt--[106px] min-h-[82vh]"
  >
    <Header client:load />
    <main class="bg-dark relative z-10 pt-[92px] lg:pt-[106px] min-h-[82vh]">
      <slot />
    </main>
    <Footer isContactPage={Astro.url.pathname.endsWith("/contact/")} />

    <script
      src={`${import.meta.env.BASE_URL}plugins/aos/aos.js`}
      is:inline
      data-astro-rerun></script>
